{% extends "layout.html" %}

{% block content %}

<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" th:replace="~{fragments/layout :: layout (~{::body},'login')}">
<body>
  <div class="jumbotron text-center">
    <div class="container">
      <h1>Bear Link</h1>
      <p>LOGIN</p>

      <form class="loginform">
          <br><label>Email Address</label><br>
          <script>
              function lettersOnly(input){
                var regex = /[^a-z]/gi;
                input.value = input.value.replace(regex, "");
              }
              </script>

          <input type="email" name="loginemail" placeholder="someone@somewhere.com"><br>
          <br><label>Password</label><br>
          <input type="password" name="loginpassword" placeholder="********"><br>
          <br><button>Login</button><br>
      </form>

      <form class="createaccount">
          <br><label>First Name</label><br>
          <input type="text" name="createfn" placeholder="First Name" onkeyup="lettersOnly(this)"><br>
          <br><label>Last Name</label><br>
          <input type="text" name="createln" placeholder="Last Name" onkeyup="lettersOnly(this)"><br>
          <br><label>Phone Number</label><br>
          <script>
              function numbersOnly(input){
                var regex = /[^0-9,-]/g;
                input.value = input.value.replace(regex, "");
              }
              </script>
          <input type="tel" name="createpn" placeholder="###-###-####" onkeyup="numbersOnly(this)"><br>
          <br><label>Email Address</label><br>
          <input type="email" name="createemail" placeholder="someone@somewhere.com"><br>
          <br><label>Password</label><br>
          <input type="password" name="createpassword" placeholder="********"><br>
          <br><button>Create New Account</button><br>
      </form>

    </div>
  </div>



